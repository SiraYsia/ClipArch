{
    "manifest_version": 3,
    "name": "CopyCache",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "clipboardWrite", 
        "clipboardRead",
        "storage"
      ],
      
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_end" 
        }
      ],
      
    "background": {
      "service_worker": "background.js"
    }
  }
  